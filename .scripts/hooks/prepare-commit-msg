#!/bin/sh

EMOJIS=(
  ":deploy:/ðŸš€"
  ":init:/ðŸŽ‰"
  ":test:/ðŸ¤–"
  ":tests:/ðŸ¤–"
  ":wip:/ðŸš§"
  ":revert:/âª"
  ":docker:/ðŸ³"
  ":bug:/ðŸ›"
  ":ref:/â™»ï¸"
  ":refact:/â™»ï¸"
  ":refacto:/â™»ï¸"
  ":refactor:/â™»ï¸"
  ":build:/ðŸ”¨"
  ":conf:/âš™"
  ":config:/âš™"
  ":doc:/ðŸ“š"
  ":login:/ðŸ”‘"
  ":search:/ðŸ”Ž"
  ":feat:/âœ¨"
  ":feats:/âœ¨"
  ":feature:/âœ¨"
  ":features:/âœ¨"
  ":css:/ðŸŽ¨"
  ":sass:/ðŸŽ¨"
  ":style:/ðŸŽ¨"
  ":styles:/ðŸŽ¨"
  ":move:/ðŸšš"
  ":dep:/ðŸ“¦"
  ":pkg:/ðŸ“¦"
  ":fix:/ðŸš¨"
  ":hotfix:/ðŸš¨"
  ":ci:/ðŸš¦"
  ":mobile:/â˜Žï¸"
  ":responsive:/â˜Žï¸"
  ":rm:/ðŸ—‘"
  ":delete:/ðŸ—‘"
  ":hot:/ðŸ”¥ "
)

USE_HUSKY=1

# fichier temporaire contenant le message de commit
if [ $USE_HUSKY == 1 ]; then
  PARAMS=( $HUSKY_GIT_PARAMS )
  COMMIT_MSG_FILE=${PARAMS[0]}
else
  COMMIT_MSG_FILE=$1
fi

MSG_CONTENT=$(cat $COMMIT_MSG_FILE) # get full message content with body
MSG_FL=$(head -1 $COMMIT_MSG_FILE) # get firstline of comment

REGEX=(:[[:alpha:]]+:)
if [[ $MSG_FL =~ $REGEX ]]; then
  MATCH="${BASH_REMATCH[0]}"

  # cherche la paire correspondante au match de la regex
  REPLACER=0
  for PAIR in ${EMOJIS[@]}
  do
    EMOJI=${PAIR#*/}
    KEYWORD=${PAIR%/*}
    if [[ $KEYWORD == $MATCH ]]; then
      REPLACER=$EMOJI
    fi
  done

  if [[ $REPLACER == 0 ]]; then
    exit 0
  fi

  # replace commit emoji
  # with the correct emoji keyword
  OUTPUT_FL=${MSG_FL/$MATCH/$REPLACER}
  OUTPUT_MSG=${MSG_CONTENT/$MSG_FL/$OUTPUT_FL}
  echo "$OUTPUT_MSG" > "$COMMIT_MSG_FILE"
fi

exit 0
